<h2>Edit your song</h2>

<form action="/songs/<%= @song.slug%>" method="post">
    <input type="hidden" name="_method" value="patch">

    <label for="name">Name</label>
    <input type="text" name="song[name]" id="name" value="<%= @song.name%>">

    <label for="artist_name">Artist Name</label>
    <input type="text" name="artist[name]" id="artist_name" value="<%= @song.artist.name%>">  

    <% Genre.all.each do |genre|%>
        <label><%= genre.name %>  
        <input type="checkbox" name="genres[]" value="<%= genre.id%>" id="<%= genre.name%>" <%= 'checked' if @song.genres.include?(genre)%>>
    <% end %>

    <input type="submit" value="Save">
</form>